<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/background_light</item>
        <item name="colorPrimaryDark">@color/accentuate_dark</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:spinnerItemStyle">@style/TextViewSpinnerItem</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/accentuate_dark</item>
        <item name="android:textColorSecondary">@color/accentuate_dark</item>
        <item name="colorAccent">@color/accentuate_dark</item>
        <item name="colorControlActivated">@color/secondary</item>
        <item name="android:colorEdgeEffect">#9e9e9e</item>
        <item name="android:actionMenuTextColor">@color/lc_toolbar_action_button_color</item>
        <item name="android:actionMenuTextAppearance">@style/toolbar_action_menu_text</item>
    </style>

    <style name="TextViewSpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="toolbar_action_menu_text" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyleWrapper</item>
    </style>

    <style name="TransparentBottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- All text should apply new text style -->
    <style name="h1">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="h2">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="h3">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="h4">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="h5">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="h6">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="body1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="body2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="button">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="overline">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="BottomSheetIcon">
        <item name="android:layout_width">@dimen/spacing_XL</item>
        <item name="android:layout_height">@dimen/spacing_XL</item>
    </style>

</resources>
